<div id="<%= dom_id reservation %>">
  <p>
    <strong>Status:</strong>
    <%= reservation.status %>
  </p>

  <p>
    <strong>Seance:</strong>
    <%= reservation.seance.movie.name %>
  </p>

  <p>
    <strong>Seance time:</strong>
    <%= format_date(reservation.seance.start_time) %>
  </p>

  <p>
    <strong>User:</strong>
    <%= reservation.email %>
  </p>

  <p>
    <strong>Seats:</strong>
    <%= reservation.seats %>
  </p>

  <% if reservation.discount_id.present?%>
    <p>
      <strong>Snack bar discount:</strong>
      <%= "#{reservation.discount.value}%" %>
    </p>
  <% end %>

</div>
